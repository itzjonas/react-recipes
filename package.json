{
  "name": "react-recipes",
  "version": "1.0.0",
  "description": "A React Hooks utility library containing popular customized hooks",
  "author": "@craig1123",
  "sideEffects": false,
  "main": "dist/react-recipes.js",
  "umd:main": "dist/react-recipes.umd.js",
  "module": "dist/react-recipes.m.js",
  "unpkg": "dist/react-recipes.umd.js",
  "source": "src/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/craig1123/react-recipes.git"
  },
  "bugs": {
    "url": "https://github.com/craig1123/react-recipes/issues"
  },
  "publishConfig": {
    "tag": "latest"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "lint": "eslint src utils",
    "lint:fix": "eslint --fix src utils",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch --runInBand",
    "prebuild": "rimraf dist && npm run lint:fix && npm run lint && npm run test",
    "build": "microbundle -o dist/ --sourcemap false",
    "dev": "microbundle watch -o dist/ --sourcemap false --compress false"
  },
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "utility",
    "utils",
    "use",
    "recipes"
  ],
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "3.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "2.5.0",
    "jest": "^25.1.0",
    "microbundle": "^0.11.0",
    "raf-stub": "^3.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-test-renderer": "^16.13.0",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "dependencies": {}
}
